        padding-left: 1.5rem; /* Indent list items */
        margin-bottom: 1.5rem; /* Space below the list */
    }
    #sbs-r-870 .cs-content ul li {
        margin-bottom: 0.75rem; /* Space between list items */
    }
    #sbs-r-870 .cs-button-solid {
        font-size: 1rem;
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        text-decoration: none;
        font-weight: 700;
        text-align: center;
        margin-top: 2rem; /* Add spacing above the button */
        color: #fff;
        min-width: 9.375rem;
        padding: 0 1.5rem;
        background-color: var(--primary);
        border-radius: 0.25rem;
        display: inline-block;
        position: relative;
        z-index: 1;
        box-sizing: border-box;
    }
    #sbs-r-870 .cs-button-solid:before {
        content: "";
        position: absolute;
        height: 100%;
        width: 0%;
        background: #000;
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        border-radius: 0.25rem;
        transition: width 0.3s;
    }
    #sbs-r-870 .cs-button-solid:hover:before {
        width: 100%;
    }
}

/* Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    #sbs-r-870 {
        padding: var(--sectionPadding);
    }

    #sbs-r-870 .cs-container {
        flex-direction: row; /* Preserve side-by-side layout for content */
        max-width: 80rem; /* 1280px */
        justify-content: space-between;
        align-items: flex-start; /* Align everything to the top */
    }

    #sbs-r-870 .cs-images-wrapper {
